<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.thu.imhere.Message"
    tools:showIn="@layout/activity_message">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/contacts_field"
        android:background="@drawable/edit_text_style"
        android:layout_alignRight="@+id/checkBox"
        android:layout_alignEnd="@+id/checkBox" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/text_field"
        android:background="@drawable/edit_text_style"
        android:layout_marginBottom="165dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/spinner_template"
        android:layout_toStartOf="@+id/spinner_template" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:typeface="monospace"
        android:id="@+id/send"
        android:background="@drawable/roundbutton"
        android:layout_below="@+id/spinner_template"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Contact"
        android:typeface="monospace"
        android:id="@+id/add_contact_button"
        android:background="@drawable/roundbutton"
        android:layout_above="@+id/checkBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personalize"
        android:id="@+id/checkBox"
        android:layout_below="@+id/contacts_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:layout_alignRight="@+id/text_field"
        android:layout_alignEnd="@+id/text_field" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randomize"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cute"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_template"
        android:layout_toRightOf="@+id/send"
        android:layout_alignTop="@+id/text_field"
        android:background="#ffffff"
        android:layout_alignBottom="@+id/text_field"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_opening"
        android:layout_above="@+id/text_field"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/spinner_template"
        android:layout_toStartOf="@+id/spinner_template" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_ending"
        android:layout_below="@+id/spinner_template"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
