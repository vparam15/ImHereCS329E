<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thu.imhere">
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Signup"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Category"
            android:label="@string/title_activity_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewGroup"
            android:label="@string/title_activity_view_group"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Templates"
            android:label="@string/title_activity_templates"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateTemplate"
            android:label="@string/title_activity_create_template"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Message"
            android:label="Message"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
